
<h2>@Model.Агент.Идентификатор</h2>

<div id="cmdbar" class="divided mt-6">
    <a class="primary button" asp-action="add">Добавить</a>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Название</th>
                <th>Сетевое имя</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var Кластер in Model.Кластеры) {
                <tr>
                    <td><span class="mif-display mif-5x fg-green"></span></td>
                    <td>
                        <a asp-controller="cluster" 
                            asp-action="overview" 
                            asp-route-cluster="@Кластер.Ид()">@Кластер.Имя()</a>
                    </td>
                    <td>
                        <a asp-controller="cluster" 
                            asp-action="overview">
                            @Кластер.АдресСервера():@Кластер.ПортСервера()
                        </a>
                    </td>
                    <td>
                        <div class="float-right">
                        <a class="button" asp-action="edit" asp-route-id="@Кластер.Ид()"><i class="far fa-edit"></i> Изменить</a>
                        <a class="negative button delete" id="@Кластер.Ид()"><i class="far fa-trash-alt"></i> Удалить</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="ui divided items">
    @foreach(var Кластер in Model.Кластеры) {
      <div class="item">
        <div class="content" id="@Кластер.Ид()">
            <a class="header" 
                asp-controller="cluster" 
                asp-action="overview" 
                asp-route-cluster="@Кластер.Ид()">@Кластер.Имя()</a>
            <div class="meta">
                <span>Адрес сервера: @Кластер.АдресСервера()</span>
                <span>Порт: @Кластер.ПортСервера()</span>
            </div>
            <div class="extra">
                <div class="ui right floated">
                    <a class="ui tiny button" asp-action="edit" asp-route-id="@Кластер.Ид()"><i class="edit icon"></i>Редактировать</a>
                    <a class="ui tiny delete button" id="@Кластер.Ид()"><i class="remove icon"></i>Удалить</a>
                </div>
            </div>
        </div>
      </div>
    }
</div>

@Html.Partial("deleteConfirmPartialView")